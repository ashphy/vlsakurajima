<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>Sakurajima</servlet-name>
		<servlet-class>com.appspot.vlsakurajima.SakurajimaServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Message</servlet-name>
		<servlet-class>com.appspot.vlsakurajima.tweet.MessageServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>Sakurajima</servlet-name>
		<url-pattern>/sakurajima</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Message</servlet-name>
		<url-pattern>/message</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	<static-files>
		<include path="/htdocs/*.html"></include>
	</static-files>
	
	<security-constraint>
        <web-resource-collection>
            <url-pattern>/sakurajima</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
    
   	<security-constraint>
        <web-resource-collection>
            <url-pattern>/message</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
</web-app>
